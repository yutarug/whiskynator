<div class="areas-space">
	<% lists.each do |list|%>
	<div class="areas-space-area">
		<div class="areas-space-area-box">
			<div class="areas-space-area-box-image"></div>
			<% if params[:controller]=="areas"%>
				<h5 class="text"><%= link_to list.name,area_path(list.id)%></h5>
			<% elsif params[:controller]=="matures"%>
				<h5 class="text"><%= link_to list.name,mature_path(list.id)%></h5>
			<% end %>
		</div>
	</div>
	<% end%>
</div>